<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="jumbotron">
        <h1>
          Edit Information for <%= @fullname %>
        </h1>



        <%= form_for @professor, url: ru_professor_path(@professor), :html => {:class => "form-horizontal"} do |p| %>
            <% if @professor.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@professor.errors.count, "error") %> prohibited
                    this professor from being saved:</h2>
                  <ul>
                    <% @professor.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <fieldset>

              <!-- Form Name -->
              <legend>Edit Professor</legend>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="prof_name">Professor Name</label>

                <div class="col-md-4">
                  <%= p.text_field :first_name, class: "form-control input-md", placeholder: "First Name" %>
                </div>

                <div class="col-md-4">
                  <%= p.text_field :last_name, class: "form-control input-md", placeholder: "Last Name" %>
                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="prof_email">Professor Email</label>

                <div class="col-md-4">
                  <%= p.email_field :email, class: "form-control input-md", placeholder: "Email Address" %>

                </div>
              </div>

              <!-- Button -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="submit"></label>

                <div class="col-md-4">

                  <%= p.submit "Save Professor", class: "btn btn-default" %>

                </div>
              </div>

            </fieldset>
        <% end %>


      </div>
    </div>
  </div>
  <div class="row clearfix">

  </div>
</div>