<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="jumbotron">
        <h1>
          The Professors Will Go Here!
        </h1>

        <p>
          Blahdy Lorem Ipsum

        </p>

        <p>
          <%= link_to "Add New Professor", {:controller => "ru_professors", action: "new"}, class: "btn btn-primary btn-large" %>
        </p>
      </div>
      <div class="row clearfix">

        <div style="display: block"><%= paginate @professors %></div>

        <% @professors.each do |p| %>
            <div class="col-md-4 column">


              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <%= link_to p.first_name + " "+p.last_name, p %>
                  </h3>
                </div>
                <div class="panel-body">
                  <%= mail_to p.email %>
                  </br>
                </div>
              </div>


            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>