<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="jumbotron">
        <h1>
          Add a Class!
        </h1>



        <%= form_for :ru_class, url: ru_classes_path, :html => {:class => "form-horizontal"} do |p| %>
            <% if @class.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@class.errors.count, "error") %> prohibited
                    this class from being saved:</h2>
                  <ul>
                    <% @class.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <fieldset>

              <!-- Form Name -->
              <legend>Create Class</legend>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="prof_name">Class Title</label>

                <div class="col-md-4">
                  <%= p.text_field :class_title, class: "form-control input-md", placeholder: "Class Title" %>
                </div>

                <div class="col-md-4">
                  <%= p.text_field :class_code, class: "form-control input-md", placeholder: "Class Code" %>
                </div>
              </div>


              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="prof_department">Class Synopsis</label>

                <div class="col-md-4">
                  <%= p.text_field :class_synopsis, class: "form-control input-md", placeholder: "The synopsis of the class" %>

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="prof_department">Choose Professors</label>

                <div class="col-md-4">
                  <%= p.select :ru_professor_select, options_for_select(RuProfessor.all.map { |r| [r.first_name + " "+r.last_name, r.id] }), {}, {:multiple => true, :class => "chosen-select"} %>
                </div>

              </div>

              <div class="form-group">
                <label class="col-md-4 control-label" for="prof_department">Choose Department</label>

                <div class="col-md-4">
                  <%= p.select :department_select, options_for_select(Department.all.map { |dpt| [dpt.name, dpt.id] }), {}, {:class => "chosen-select"} %>
                </div>
              </div>

              <!-- Button -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="submit"></label>

                <div class="col-md-4">

                  <%= p.submit "Add Class", class: "btn btn-default" %>

                </div>
              </div>

            </fieldset>
        <% end %>


      </div>
    </div>
  </div>
  <div class="row clearfix">

  </div>
</div>