<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="jumbotron">
        <h1>
          The Classes Will Go Here!
        </h1>

        <p>
          Blahdy Lorem Ipsum
        </p>

        <p>
          <%= link_to "Add New Class", {:controller => "ru_classes", action: "new"}, class: "btn btn-primary btn-large" %>
        </p>
      </div>
      <div class="row clearfix">

        <div style="display: block"><%= paginate @classes %></div>

        <% @classes.each do |c| %>
            <div class="col-md-4 column">


              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <%= link_to c.class_title, c %>
                  </h3>
                </div>
                <div class="panel-body">
                  <%= c.class_synopsis %>
                </div>
              </div>


            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>`